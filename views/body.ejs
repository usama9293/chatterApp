<% layout("/layout/boilerplate") %>

<div class="container mt-5">
  <h1 class="text-center">Chatter App</h1>
  
  <!-- Message List -->
  <div class="row mt-3">
    <div class="col-md-8 offset-md-2">
      <ul id="messages" class="list-group p-3 border rounded" style="height: 300px; overflow-y: auto; background-color: #f9f9f9;">
        <!-- Messages will appear here -->
      </ul>
    </div>
  </div>

  <!-- Chat Form -->
  <form id="chat-form" action="">
    <div class="input-group mt-3">
      <input id="message" autocomplete="off" class="form-control" placeholder="Type your message..." />
      <button class="btn btn-primary" type="submit">Send</button>
    </div>
  </form>
</div>
