<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io.connect();

  $('form').submit(()=>{
    socket.emit('message', $('#message').val());
    $('#message').val('');
    return false;
  });

  socket.on('connect', ()=>{
    //emitting to everybody
   socket.emit('message', 'user connected');
  });

  socket.on('message', (msg)=>{
    $('#messages').append($('<li>').text(msg));
  });

 
</script>
